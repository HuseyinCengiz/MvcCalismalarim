
@{
    ViewBag.Title = "Profiller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Blogum.Models;
@model IEnumerable<Profil>
<!-- START RESPONSIVE TABLES -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Kategoriler</h3>
                <a href="/Admin/ProfilEkle" class="btn btn-success btn-rounded btn-sm pull-right"><span class="fa fa-plus"> Yeni Ekle</span></a>
            </div>
            <div class="panel-body panel-body-table">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-actions">
                        <thead>
                            <tr>
                                <th>Profil</th>
                                <th>Twitter</th>
                                <th>Facebook</th>
                                <th>Google</th>
                                <th>LinkedIn</th>
                                <th width="100">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Profil item in Model)
                            {
                                <tr>
                                    <td><strong>@item.aspnet_Users.UserName</strong></td>
                                    @if (item.Twitter != "")
                                    {
                                        <td>
                                            @item.Twitter
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (item.Facebook != "")
                                    {
                                        <td>
                                            @item.Facebook
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (item.Google != "")
                                    {
                                        <td>
                                            @item.Google
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (item.LinkedIn != "")
                                    {
                                        <td>
                                            @item.LinkedIn
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td width="15%">
                                        <a href="/Admin/ProfilDuzenle/@item.aspnet_Users.UserName" class="btn btn-warning btn-rounded btn-sm duzenle"><span class="fa fa-pencil"> Düzenle</span></a>
                                        <a class="btn btn-danger btn-rounded btn-sm" id="profilsil" data-sid="@item.aspnet_Users.UserName"><span class="fa fa-times"> Sil</span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END RESPONSIVE TABLES -->
