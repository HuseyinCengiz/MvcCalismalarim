
@{
    ViewBag.Title = "Özellik Değer Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using KandQTicaret.Models
@model IEnumerable<OzellikTip>

@section heads{
    <style>
        label.error {
            color: red;
        }
    </style>
}
<!-- Horizontal form -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Ekle</header>
            <div class="panel-body">
                @using (Html.BeginForm("OzellikDegerEkle", "Admin", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "ozellikdegerform" }))
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Özellik Tip</label>
                        <div class="col-sm-10 ">
                            <select name="OzellikTipID" id="OzellikTipID" class="form-control">
                                <option value="0">Özellik Tip Seçiniz</option>
                                @foreach (OzellikTip item in Model)
                                {
                                    <option value="@item.Id">@item.Adi</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Adı</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" name="Aciklama" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Scripts/jquery-validation/jquery.validate.js"></script>
    <script src="/Scripts/CommonScript.js"></script>
}
<!-- /Horizontal form -->
