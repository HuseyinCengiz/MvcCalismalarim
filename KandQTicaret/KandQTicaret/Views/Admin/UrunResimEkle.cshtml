
@{
    ViewBag.Title = "Ürün Resim Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using KandQTicaret.Models
@model Urun
@section heads{
    <style>
        label.error {
            color: red;
        }
    </style>
}
<!-- Horizontal form -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Ekle</header>
            <div class="panel-body">
                @using (Html.BeginForm("UrunResimEkle", "Admin", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "urunresimform", enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Resim</label>
                        <div class="col-sm-10">
                            <input type="file" name="UrunResim">
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Scripts/jquery-validation/jquery.validate.js"></script>
    <script src="/Scripts/CommonScript.js"></script>
}
<!-- /Horizontal form -->
