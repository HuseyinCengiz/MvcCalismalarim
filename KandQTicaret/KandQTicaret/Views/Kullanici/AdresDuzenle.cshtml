
@{
    ViewBag.Title = "Adres Duzenle";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
@using KandQTicaret.Models
@model MusteriAdre

@section heads{
    <style>
        label.error {
            color: red;
        }
    </style>
}
<!-- Horizontal form -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Ekle</header>
            <div class="panel-body">
                @using (Html.BeginForm("AdresDuzenle", "Kullanici", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Adresim</label>
                        <div class="col-sm-10">
                            <textarea name="Adres" class="form-control">@Model.Adres</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Scripts/CommonScript.js"></script>
}




