
@{
    ViewBag.Title = "Rol Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section heads{
    <style>
        label.error {
            color: red;
        }
    </style>
}
<!-- Horizontal form -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Ekle</header>
            <div class="panel-body">
                @using (Html.BeginForm("RolEkle", "Kullanici", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "rolekleform" }))
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Rol Adı</label>
                        <div class="col-sm-10">
                            <input type="text" name="RolAdi" class="form-control">
                        </div>
                    </div>
                    if (ViewBag.Error != null)
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <p style="color:red;">@ViewBag.Error</p>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Scripts/jquery-validation/jquery.validate.js"></script>
    <script src="/Scripts/CommonScript.js"></script>
}
