
@{
    ViewBag.Title = "RolAta";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using KandQTicaret.Models

@section heads{
    <style>
        label.error {
            color: red;
        }
    </style>
}
<!-- Horizontal form -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Ekle</header>
            <div class="panel-body">
                @using (Html.BeginForm("RolAta", "Kullanici", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "rolataform" }))
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Kullanıcı</label>
                        <div class="col-sm-10 ">
                            <select name="KullaniciAdi" id="KullaniciAdi" class="form-control">
                                <option value="0">Kullanıcı Seçiniz</option>
                                @foreach (MembershipUser item in ViewBag.Kullanicilar)
                                {
                                    <option value="@item.UserName">@item.UserName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Rol</label>
                        <div class="col-sm-10 ">
                            <select name="RolAdi" id="RolAdi" class="form-control">
                                <option value="0">Rol Seçiniz</option>
                                @foreach (string item in ViewBag.Roller)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    if (ViewBag.Error != null)
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <p style="color:red;">@ViewBag.Error</p>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Scripts/jquery-validation/jquery.validate.js"></script>
    <script src="/Scripts/CommonScript.js"></script>
}
<!-- /Horizontal form -->
