@using KandQTicaret.Models
@model  IEnumerable<UstKategori>
<aside class="sidebar col-md-3 col-sm-4 col-xs-12 col-md-pull-9 col-sm-pull-8">
    <div id="categories_block_left" class="block simple">
        <div class="heading_block">
            <h4>
                <i class="icon icon-bars"></i>
                Kategoriler
            </h4>
        </div><!-- .heading_block -->
        <div class="block_content">
            <ul>
                @foreach (UstKategori item in Model)
                {
                    <li>
                        <a href="#">@item.Adi</a>
                        @foreach (Kategori kategori in item.Kategoris)
                        {
                            <ul>
                                <li><a href="/Home/KategoriyeGoreUrunler/@kategori.Id">@kategori.Adi</a></li>
                            </ul>
                        }
                    </li>
                }
            </ul>
        </div><!-- .block_content -->
    </div><!-- .block -->
</aside><!-- .sidebar -->